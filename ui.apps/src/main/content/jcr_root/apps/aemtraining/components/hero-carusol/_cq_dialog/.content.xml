<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
        xmlns:cq="http://www.day.com/jcr/cq/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:title="Hero Carousel"
        sling:resourceType="cq/gui/components/authoring/dialog">

    <!-- ✅ Content Wrapper -->
    <content
            granite:class="cmp-hero-carousel__editor"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">

        <items jcr:primaryType="nt:unstructured">

            <!-- ✅ Column -->
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">

                <items jcr:primaryType="nt:unstructured">

                    <!-- ✅ Carousel Title -->
                    <carouselTitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Carousel Title"
                            name="./carouselTitle"/>

                    <!-- ✅ Well Wrapper Like Your Example -->
                    <well-slides
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/well"
                            fieldLabel="Slides">

                        <items jcr:primaryType="nt:unstructured">

                            <!-- ✅ Composite Multifield -->
                            <slides
                                    granite:class="hero-carousel-multifield"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                    fieldLabel="Hero Slides"
                                    composite="{Boolean}true"
                                    required="{Boolean}false">

                                <!-- Field Container -->
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        name="./slides">

                                    <items jcr:primaryType="nt:unstructured">

                                        <!-- Slide Image -->
                                        <image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Slide Image"
                                                name="./image"
                                                rootPath="/content/dam"
                                                required="{Boolean}true"/>

                                        <!-- Heading -->
                                        <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Heading"
                                                name="./heading"/>

                                        <!-- Description -->
                                        <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Description"
                                                name="./description"/>

                                        <!-- Button Text -->
                                        <buttonText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Button Text"
                                                name="./buttonText"/>

                                        <!-- Button Link -->
                                        <buttonLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Button Link"
                                                name="./buttonLink"/>

                                    </items>

                                </field>

                            </slides>

                        </items>

                    </well-slides>

                </items>

            </column>

        </items>

    </content>

</jcr:root>
